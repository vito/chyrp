{% extends "layout.twig" %}

{% block title %}${ "Themes" | translate }{% endblock %}

{% block content %}
            <h1>${ "Themes" | translate }</h1>
            {% for theme in themes %}
            <div class="theme {% if theme.name == site.theme %}current {% endif %}box left">
                <a href="{% admin "change_theme&theme=" ~ theme.name %}" class="link">
                    <span>${ theme.info.name | translate(theme.name) | escape }</span>
                    <img src="$theme.screenshot" alt="${ ('"' ~ theme.info.name ~ '"') | escape } screenshot" class="screenshot" width="256" />
                </a>
                <br /><small>${ "v%s by %s" | translate | format(theme.info.version, theme.info.author.link) }</small>
                <br />
                <br />
                {% if theme.name == site.theme %}
                <span class="button yay center"><img src="images/icons/success.png" alt="current theme" />${ "Current Theme" | translate }</span>
                {% else %}
                <a class="button center" href="{% admin "change_theme&theme=" ~ theme.name %}"><img src="images/icons/appearance.png" alt="Select" />${ "Select" | translate }</a>
                <a class="button center${ preview | selected(theme.name, true) }" href="{% admin "preview_theme&theme=" ~ theme.name %}"><img src="images/icons/magnifier.png" alt="Preview" />${ "Preview" | translate }</a>
                {% endif %}
            </div>
            {% endfor %}
            <div class="clear"></div>
            <br />
            <a class="button right" href="http://chyrp.net/extend/type/theme">${ "Get More Themes &rsaquo;" | translate }</a>
{% endblock %}
