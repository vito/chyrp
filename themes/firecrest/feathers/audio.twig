{% extends "content/post.twig" %}

{% block content %}
    {% if post['title'] %}
        <h2 class="title">
            <a href="$post.url" rel="bookmark" title="${ "Permanent Link to" | translate } &quot;$post.title&quot;">$post.title</a>
        </h2>
    {% endif %}
    $post.audio_player
    <div class="clear"></div>
    ${ post.description | read_more }
{% endblock %}
