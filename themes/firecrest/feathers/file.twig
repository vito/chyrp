{% extends "content/post.twig" %}

{% block content %}
    {% if post['title'] %}
        <h2 class="title">
            <a href="$post.url" rel="bookmark" title="${ "Permanent Link to" | translate } &quot;$post.title&quot;">${post.title | escape}</a>
        </h2>
    {% endif %}
    <p>${ post.caption | read_more }</p>

    Download: <a href="${ post.link | escape }" class="file">${ post.filename | escape }</a>
    <div class="clear"></div>
{% endblock %}
