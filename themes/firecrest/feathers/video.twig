{% extends "content/post.twig" %}

{% block content %}
    {% if post['title'] %}
        <h2 class="title">
            <a href="$post.url" rel="bookmark" title="${ "Permanent Link to" | translate } &quot;$post.title&quot;">$post.title</a>
        </h2>
    {% endif %}
    ${ feathers['video'].embed_tag_for(post, 510) }
    <div class="clear"></div>
    ${ post.caption | read_more }
{% endblock %}
