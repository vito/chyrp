{% extends "layouts/default.twig" %}

{% block content %}
                <div class="page">
                    {% if visitor.group.can("edit_page", "delete_page") %}
                    <span class="controls right">
                        $page.edit_link
                        ${ page.delete_link("Delete" | translate, " | ") }
                    </span>
                    {% endif %}
                    <h1>$page.title</h1>
                    $page.body
                </div>
{% endblock %}
